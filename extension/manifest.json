{
    "manifest_version": 2,
    "name": "Extension ohne Popup",
    "description": "Die URL des aktiven Tabs an borsti-Container senden, dann http://www.spiegel.de/ in einem neuem Tab Ã¶ffnen.",
    "version": "42.6",
    "author": [{
        "name": "Wolfgang Tepper",
        "email": "tepper@hs-flensburg.de"
    }],

    "permissions": ["activeTab", "tabs"],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["content.js"]
    }],

    "browser_action": {
        "default_icon": "icon.png"
    }
}